style "scale" = "default"
{
    GtkScale   ::trough-side-details    = 1
    GtkScale   ::slider-width           = 14
    GtkScale   ::slider-length          = 14

    xthickness = 3
    ythickness = 3

    bg[NORMAL]      = shade (1.25, @bg_color)                   # SLIDER
    bg[SELECTED]    = shade (1.10, @selected_bg_color)          # BORDER
    bg[ACTIVE]      = shade (0.85, @bg_color)                   # TROUGH
    bg[INSENSITIVE] = shade (0.95, @bg_color)
    bg[PRELIGHT]    = mix (0.95, @bg_color, @selected_bg_color) # SLIDER
	
    engine "murrine"
    {
        border_shades       = {0.8, 0.6}
        contrast            = 0.8
        lightborderstyle    = 1
        roundness           = 7
        trough_shades       = {0.9, 1.1}
    }
}

