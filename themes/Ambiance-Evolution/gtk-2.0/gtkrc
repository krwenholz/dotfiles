{
    GtkPaned::handle-size	= 1

    engine "pixmap"
    {
        image
        {
            function    = HANDLE
            file        = "Sidebar/handle.png"
            stretch     = TRUE
            border      = { 0, 0, 0, 0 }
        }
    }
}

style "pixmap_paned"
{
    GtkPaned ::handle_size = 8

    engine "pixmap"
    {
        image
        {
            file                = "Handle/pane-horiz.png"
            function            = HANDLE
            overlay_file        = "Handle/dimple.png"
            overlay_stretch     = FALSE
            stretch             = TRUE
            orientation         = VERTICAL
        }

        image
        {
            file                = "Handle/pane-vert.png"
            function            = HANDLE
            overlay_file        = "Handle/dimple.png"
            overlay_stretch     = FALSE
            stretch             = TRUE
            orientation         = HORIZONTAL
        }
    }
}

