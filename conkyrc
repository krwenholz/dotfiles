alignment top_left
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=12
gap_x 5
gap_y 60
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_transparent yes
stippled_borders 0
update_interval 0.5
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
double_buffer yes

TEXT
${time %H:%M:%S}    ${color white}${time %a,} ${time %B %e %G} 
${color #CC6600}System Status
${color lightgrey}$hr
${color #66FF33}Volume:${color #66FF33} ${mixerbar}	
${color #00999C}Battery: ${battery BAT0}	
${color #FFF333}Brightness: ${exec cat /sys/class/backlight/acpi_video0/brightness}/${exec cat /sys/class/backlight/acpi_video0/max_brightness}
${color grey}Uptime:$color $uptime
${color grey}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color grey}CPU Usage:$color $cpu% ${cpubar 4}
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
File Systems: $color${fs_used /}/${fs_size /} ${fs_bar 4 /}

${color grey}Networking:
Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}

${color #CC6600}Highest CPU
${color lightgrey}$hr
${color grey}Name   CPU%   
${color #FF3300} ${top name 1} ${top cpu 1}
${color lightgrey} ${top name 2} ${top cpu 2}
${color lightgrey} ${top name 3} ${top cpu 3}

${color #CC6600}Highest RAM
${color lightgrey}$hr
${color grey}Name   MEM%
${color #FF3300} ${top name 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top mem 3}

${color #CC6600}Current Weather
${color lightgrey}$hr
${color white}Tacoma    WA: 
    ${execi 300 /home/krwenholz/bin/conky_weather.sh 98416}
${color white}Florence  MT: 
    ${execi 300 /home/krwenholz/bin/conky_weather.sh 59833}
${color white}Fallbrook CA: 
    ${execi 300 /home/krwenholz/bin/conky_weather.sh 92028}
